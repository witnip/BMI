<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.witnip.bmi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.WaterIntakeGraph"></activity>
        <activity
            android:name=".Activities.WeightTracker"
            android:label="Weight Tracker" />
        <activity
            android:name=".Activities.WaterIntake"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.IdealWeightResult"
            android:label="Ideal Weight Result" />
        <activity
            android:name=".Activities.CaloriesCalculation"
            android:label="Calories" />
        <activity
            android:name=".Activities.IdealWeightCalculation"
            android:label="Ideal Weight" />
        <activity
            android:name=".Activities.BfpResult"
            android:label="BFP Result" />
        <activity
            android:name=".Activities.BfpCalculation"
            android:label="BFP Calculation" />
        <activity
            android:name=".Activities.WeightGoal"
            android:label="Weight Goal" />
        <activity
            android:name=".Activities.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Share"
            android:label="Share"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SetUpActivity"
            android:label="Setup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ResetPassword"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Profile"
            android:label="Profile"/>
        <activity
            android:name=".Activities.OnBoard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Logout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.FeedBack" />
        <activity
            android:name=".Activities.EditProfile"
            android:label="Edit profile" />
        <activity
            android:name=".Activities.Diet"
            android:label="Diet" />
        <activity
            android:name=".Activities.BmiResult"
            android:label="BMI Result" />
        <activity
            android:name=".Activities.BmiCalculation"
            android:label="BMI" />
        <activity
            android:name=".Activities.About"
            android:label="About" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>